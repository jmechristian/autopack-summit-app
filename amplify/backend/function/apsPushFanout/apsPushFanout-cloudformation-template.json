{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Lambda Function resource stack creation using Amplify CLI",
  "Parameters": {
    "CloudWatchRule": {
      "Type": "String",
      "Default": "NONE",
      "Description": " Schedule Expression"
    },
    "deploymentBucketName": {
      "Type": "String"
    },
    "env": {
      "Type": "String"
    },
    "s3Key": {
      "Type": "String"
    },
    "apiautopacksummitappGraphQLAPIIdOutput": {
      "Type": "String",
      "Default": "apiautopacksummitappGraphQLAPIIdOutput"
    },
    "apiautopacksummitappGraphQLAPIEndpointOutput": {
      "Type": "String",
      "Default": "apiautopacksummitappGraphQLAPIEndpointOutput"
    },
    "apiautopacksummitappGraphQLAPIKeyOutput": {
      "Type": "String",
      "Default": "apiautopacksummitappGraphQLAPIKeyOutput"
    },
    "expoAccessToken": {
      "Type": "String",
      "NoEcho": true,
      "Default": "Q1LUAfW7AsaL43RmTssDtPRkxagdP59OVjMrsHCY"
    },
    "pushTokenGsiName": {
      "Type": "String",
      "Default": "byUserUpdated"
    },
    "pushTokenTableName": {
      "Type": "String",
      "Default": "ApsPushToken-lkbfurpd5bhvtewpiqr5xhye6u-dev"
    }
  },
  "Conditions": {
    "ShouldNotCreateEnvResources": {
      "Fn::Equals": [
        {
          "Ref": "env"
        },
        "NONE"
      ]
    }
  },
  "Resources": {
    "LambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Metadata": {
        "aws:asset:path": "./src",
        "aws:asset:property": "Code"
      },
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "deploymentBucketName"
          },
          "S3Key": {
            "Ref": "s3Key"
          }
        },
        "Handler": "index.handler",
        "FunctionName": {
          "Fn::If": [
            "ShouldNotCreateEnvResources",
            "apsPushFanout",
            {
              "Fn::Join": [
                "",
                [
                  "apsPushFanout",
                  "-",
                  {
                    "Ref": "env"
                  }
                ]
              ]
            }
          ]
        },
        "Environment": {
          "Variables": {
            "ENV": {
              "Ref": "env"
            },
            "REGION": {
              "Ref": "AWS::Region"
            },
            "API_AUTOPACKSUMMITAPP_GRAPHQLAPIIDOUTPUT": {
              "Ref": "apiautopacksummitappGraphQLAPIIdOutput"
            },
            "API_AUTOPACKSUMMITAPP_GRAPHQLAPIENDPOINTOUTPUT": {
              "Ref": "apiautopacksummitappGraphQLAPIEndpointOutput"
            },
            "API_AUTOPACKSUMMITAPP_GRAPHQLAPIKEYOUTPUT": {
              "Ref": "apiautopacksummitappGraphQLAPIKeyOutput"
            },
            "EXPO_ACCESS_TOKEN": {
              "Ref": "expoAccessToken"
            },
            "PUSH_TOKEN_GSI_NAME": {
              "Ref": "pushTokenGsiName"
            },
            "PUSH_TOKEN_TABLE_NAME": {
              "Ref": "pushTokenTableName"
            },
            "APP_USER_TABLE_NAME": {
              "Fn::Join": [
                "",
                [
                  "ApsAppUser-",
                  {
                    "Ref": "apiautopacksummitappGraphQLAPIIdOutput"
                  },
                  "-",
                  {
                    "Ref": "env"
                  }
                ]
              ]
            },
            "APP_USER_CONTACT_TABLE_NAME": {
              "Fn::Join": [
                "",
                [
                  "ApsAppUserContact-",
                  {
                    "Ref": "apiautopacksummitappGraphQLAPIIdOutput"
                  },
                  "-",
                  {
                    "Ref": "env"
                  }
                ]
              ]
            },
            "APP_USER_PROFILE_TABLE_NAME": {
              "Fn::Join": [
                "",
                [
                  "ApsAppUserProfile-",
                  {
                    "Ref": "apiautopacksummitappGraphQLAPIIdOutput"
                  },
                  "-",
                  {
                    "Ref": "env"
                  }
                ]
              ]
            },
            "APP_USER_PROFILE_GSI_NAME": "byUser"
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "LambdaExecutionRole",
            "Arn"
          ]
        },
        "Runtime": "nodejs22.x",
        "Layers": [],
        "Timeout": 25
      }
    },
    "LambdaExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::If": [
            "ShouldNotCreateEnvResources",
            "autopacksummitappLambdaRole96ca484c",
            {
              "Fn::Join": [
                "",
                [
                  "autopacksummitappLambdaRole96ca484c",
                  "-",
                  {
                    "Ref": "env"
                  }
                ]
              ]
            }
          ]
        },
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        }
      }
    },
    "lambdaexecutionpolicy": {
      "DependsOn": [
        "LambdaExecutionRole"
      ],
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "lambda-execution-policy",
        "Roles": [
          {
            "Ref": "LambdaExecutionRole"
          }
        ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
              ],
              "Resource": {
                "Fn::Sub": [
                  "arn:aws:logs:${region}:${account}:log-group:/aws/lambda/${lambda}:log-stream:*",
                  {
                    "region": {
                      "Ref": "AWS::Region"
                    },
                    "account": {
                      "Ref": "AWS::AccountId"
                    },
                    "lambda": {
                      "Ref": "LambdaFunction"
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    },
    "LambdaTriggerPolicyApsContactRequest": {
      "DependsOn": [
        "LambdaExecutionRole"
      ],
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "amplify-lambda-execution-policy-ApsContactRequest",
        "Roles": [
          {
            "Ref": "LambdaExecutionRole"
          }
        ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "dynamodb:DescribeStream",
                "dynamodb:GetRecords",
                "dynamodb:GetShardIterator",
                "dynamodb:ListStreams"
              ],
              "Resource": {
                "Fn::ImportValue": {
                  "Fn::Sub": "${apiautopacksummitappGraphQLAPIIdOutput}:GetAtt:ApsContactRequestTable:StreamArn"
                }
              }
            }
          ]
        }
      }
    },
    "LambdaEventSourceMappingApsContactRequest": {
      "Type": "AWS::Lambda::EventSourceMapping",
      "DependsOn": [
        "LambdaTriggerPolicyApsContactRequest",
        "LambdaExecutionRole"
      ],
      "Properties": {
        "BatchSize": 100,
        "Enabled": true,
        "EventSourceArn": {
          "Fn::ImportValue": {
            "Fn::Sub": "${apiautopacksummitappGraphQLAPIIdOutput}:GetAtt:ApsContactRequestTable:StreamArn"
          }
        },
        "FunctionName": {
          "Fn::GetAtt": [
            "LambdaFunction",
            "Arn"
          ]
        },
        "StartingPosition": "LATEST"
      }
    },
    "LambdaTriggerPolicyApsDmMessage": {
      "DependsOn": [
        "LambdaExecutionRole"
      ],
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "amplify-lambda-execution-policy-ApsDmMessage",
        "Roles": [
          {
            "Ref": "LambdaExecutionRole"
          }
        ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "dynamodb:DescribeStream",
                "dynamodb:GetRecords",
                "dynamodb:GetShardIterator",
                "dynamodb:ListStreams"
              ],
              "Resource": {
                "Fn::ImportValue": {
                  "Fn::Sub": "${apiautopacksummitappGraphQLAPIIdOutput}:GetAtt:ApsDmMessageTable:StreamArn"
                }
              }
            }
          ]
        }
      }
    },
    "LambdaEventSourceMappingApsDmMessage": {
      "Type": "AWS::Lambda::EventSourceMapping",
      "DependsOn": [
        "LambdaTriggerPolicyApsDmMessage",
        "LambdaExecutionRole"
      ],
      "Properties": {
        "BatchSize": 100,
        "Enabled": true,
        "EventSourceArn": {
          "Fn::ImportValue": {
            "Fn::Sub": "${apiautopacksummitappGraphQLAPIIdOutput}:GetAtt:ApsDmMessageTable:StreamArn"
          }
        },
        "FunctionName": {
          "Fn::GetAtt": [
            "LambdaFunction",
            "Arn"
          ]
        },
        "StartingPosition": "LATEST"
      }
    },
    "AmplifyResourcesPolicy": {
      "DependsOn": [
        "LambdaExecutionRole"
      ],
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "amplify-lambda-execution-policy",
        "Roles": [
          {
            "Ref": "LambdaExecutionRole"
          }
        ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "appsync:GraphQL"
              ],
              "Resource": [
                {
                  "Fn::Join": [
                    "",
                    [
                      "arn:aws:appsync:",
                      {
                        "Ref": "AWS::Region"
                      },
                      ":",
                      {
                        "Ref": "AWS::AccountId"
                      },
                      ":apis/",
                      {
                        "Ref": "apiautopacksummitappGraphQLAPIIdOutput"
                      },
                      "/types/Query/*"
                    ]
                  ]
                }
              ]
            }
          ]
        }
      }
    },
    "CustomLambdaExecutionPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "custom-lambda-execution-policy",
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "dynamodb:Query",
                "dynamodb:Scan",
                "dynamodb:GetItem",
                "dynamodb:PutItem",
                "dynamodb:UpdateItem"
              ],
              "Resource": [
                "arn:aws:dynamodb:*:*:table/ApsAppUserContact-*",
                "arn:aws:dynamodb:*:*:table/ApsAppUser-*",
                "arn:aws:dynamodb:*:*:table/ApsAppUserProfile-*",
                "arn:aws:dynamodb:*:*:table/ApsAppUserProfile-*/index/*",
                "arn:aws:dynamodb:*:*:table/ApsPushToken-*",
                "arn:aws:dynamodb:*:*:table/ApsPushToken-*/index/*"
              ],
              "Effect": "Allow"
            }
          ]
        },
        "Roles": [
          {
            "Ref": "LambdaExecutionRole"
          }
        ]
      },
      "DependsOn": "LambdaExecutionRole"
    }
  },
  "Outputs": {
    "Name": {
      "Value": {
        "Ref": "LambdaFunction"
      }
    },
    "Arn": {
      "Value": {
        "Fn::GetAtt": [
          "LambdaFunction",
          "Arn"
        ]
      }
    },
    "Region": {
      "Value": {
        "Ref": "AWS::Region"
      }
    },
    "LambdaExecutionRole": {
      "Value": {
        "Ref": "LambdaExecutionRole"
      }
    },
    "LambdaExecutionRoleArn": {
      "Value": {
        "Fn::GetAtt": [
          "LambdaExecutionRole",
          "Arn"
        ]
      }
    }
  }
}